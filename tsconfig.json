{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "moduleResolution": "node",
    "allowJs": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "pretty": true,
    "listFiles": true,
    "newLine": "lf",
    "rootDir": "web/lib",
    "outDir": "dev/lib",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]
}
